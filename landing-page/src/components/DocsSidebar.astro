---
const sidebarItems = [
    {
        title: "Getting Started",
        items: [
            { label: "Introduction", href: "/docs" },
            { label: "Quick Start", href: "#quick-start" },
            { label: "Installation", href: "#installation" },
        ],
    },
    {
        title: "Core Concepts",
        items: [
            { label: "Architecture", href: "#architecture" },
            { label: "AI Components", href: "#components" },
            { label: "Memory System", href: "#memory" },
        ],
    },
    {
        title: "Reference",
        items: [
            { label: "API Reference", href: "#api" },
            { label: "CLI Tools", href: "#cli" },
        ],
    },
];
---

<aside
    class="w-64 fixed left-0 top-0 bottom-0 bg-bg-surface border-r border-border-main overflow-y-auto hidden lg:block z-40 transition-colors duration-300"
>
    <!-- Sidebar Branding -->
    <div class="px-8 pt-8 pb-4 border-b border-border-main mb-6">
        <a
            href="/"
            class="flex items-center gap-3 hover:opacity-80 transition-opacity"
        >
            <img
                src="/logo.png"
                alt="Gabay Logo"
                class="h-6 w-6 object-contain"
            />
            <span class="text-text-main text-lg font-bold tracking-tight">
                <span class="text-blue-500">Ga</span>bay
            </span>
        </a>
        <a
            href="/"
            class="text-xs text-text-muted hover:text-text-main mt-4 flex items-center gap-1 transition-colors"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-3 w-3"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"><path d="m15 18-6-6 6-6"></path></svg
            >
            Back to Home
        </a>
    </div>

    <div class="px-8 pb-10">
        {
            sidebarItems.map((section) => (
                <div class="mb-8">
                    <h3 class="text-xs font-semibold uppercase tracking-wider text-text-muted mb-4 px-3">
                        {section.title}
                    </h3>
                    <ul class="space-y-1">
                        {section.items.map((item) => (
                            <li>
                                <a
                                    href={item.href}
                                    class="block px-4 py-2 text-sm text-text-muted hover:text-blue-500 hover:bg-blue-500/10 rounded-xl transition-all duration-300 group"
                                >
                                    <span class="relative z-10">
                                        {item.label}
                                    </span>
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>
</aside>
