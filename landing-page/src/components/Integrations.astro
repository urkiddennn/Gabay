            ].map((integration) => (
                <div class="flex flex-col items-center gap-3">
                    <div class="w-16 h-16 md:w-20 md:h-20 bg-bg-surface border border-border-main rounded-xl flex items-center justify-center hover:bg-bg-page transition-colors cursor-pointer group">
                        <svg
                            class="w-8 h-8 md:w-10 md:h-10 transition-transform group-hover:scale-105"
                            viewBox="0 0 24 24"
                            style={`color: ${integration.color}`}
                        >
                            <Fragment set:html={integration.icon} />
                        </svg>
                    </div>
                    <span class="text-text-muted text-[10px] font-bold uppercase tracking-wider">
                        {integration.name}
                    </span>
                </div>
            ))
        }
    </div>

    <!-- Link -->
    <a
        href="#"
        class="relative z-10 text-blue-500 hover:text-blue-600 font-bold text-xs transition-colors flex items-center gap-1 group"
    >
        VIEW ALL 50+ INTEGRATIONS
        <span class="group-hover:translate-x-1 transition-transform">â†’</span>
    </a>
</section>
