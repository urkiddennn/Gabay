                },
                {
                    name: "Weather",
                    color: "#38bdf8",
                    icon: '<path fill="currentColor" d="M12.981 3.018a1.5 1.5 0 0 0-1.962 0A7.5 7.5 0 0 0 5.485 10.5h-.008A4.985 4.985 0 0 0 .5 15.492c0 2.761 2.224 5.008 4.985 5.008h13.03a5.523 5.523 0 0 0 0-11.046h-.22a7.513 7.513 0 0 0-5.314-6.436z"/>',
