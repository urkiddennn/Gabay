---
// Integrations Component
---

<section
    class="relative w-full max-w-[1240px] mx-auto px-6 py-24 flex flex-col items-center"
>
    <!-- Badge -->
    <div
        class="relative z-10 flex items-center gap-2 px-4 py-1.5 rounded-full border border-border-main bg-bg-surface mb-8"
    >
        <svg
            class="w-4 h-4 text-blue-500"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
        </svg>
        <span
            class="text-xs font-semibold text-text-muted tracking-wide uppercase"
            >Fully Integrated</span
        >
    </div>

    <!-- Title -->
    <h2
        class="relative z-10 text-4xl md:text-5xl lg:text-[3rem] font-bold tracking-tight text-text-main mb-16 text-center"
    >
        YOUR APPS, <span class="text-blue-500">AUTOMATED</span>
    </h2>

    <!-- Grid of Logos -->
    <div
        class="relative z-10 flex flex-wrap justify-center gap-4 md:gap-6 mb-12"
    >
        {
            [
                {
                    name: "Telegram",
