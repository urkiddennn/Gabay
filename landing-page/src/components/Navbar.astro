---
import ThemeToggle from "./ThemeToggle.astro";
---

<nav
    class="sticky top-0 w-full glass z-50 transition-all duration-300 px-8 lg:px-24 py-4"
>
    <div class="max-w-7xl mx-auto flex items-center justify-between">
        <div class="flex items-center gap-10">
            <!-- Gabay Logo -->
            <a
                href="/"
                class="flex items-center gap-3 group transition-transform hover:scale-105 active:scale-95"
            >
                <img
                    src="/logo.png"
                    alt="Gabay Logo"
                    class="h-8 w-8 object-contain"
                />
                <span class="text-text-main text-2xl font-bold tracking-tight">
                    Gabay
                </span>
            </a>

            <div
                class="hidden lg:flex items-center gap-8 text-[14px] font-semibold text-text-muted"
            >
                <a
                    href="/#use-cases"
                    class="hover:text-brand-primary transition-colors relative group"
                    >What is Gabay?
                    <span
                        class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-primary transition-all group-hover:w-full"
                    ></span>
                </a>
                <a
                    href="/#setup"
                    class="hover:text-brand-primary transition-colors relative group"
                    >Get Started
                    <span
                        class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-primary transition-all group-hover:w-full"
                    ></span>
                </a>
                <a
                    href="/#faq"
                    class="hover:text-brand-primary transition-colors relative group"
                    >FAQ
                    <span
                        class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-primary transition-all group-hover:w-full"
                    ></span>
                </a>
                <a
                    href="/docs"
                    class="hover:text-brand-primary transition-colors relative group"
                    >Docs
                    <span
                        class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-primary transition-all group-hover:w-full"
                    ></span>
                </a>
            </div>
        </div>

        <div class="flex items-center gap-6">
            <a
                href="https://github.com/urkiddennn/Gabay"
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-muted hover:text-text-main transition-colors"
                aria-label="GitHub Repository"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path
                        d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                    ></path>
                    <path d="M9 18c-4.51 2-5-2-7-2"></path>
                </svg>
            </a>
            <ThemeToggle />
            <div class="hidden sm:flex items-center gap-8">
                <a
                    href="#demo"
                    class="text-[14px] font-bold text-text-muted hover:text-text-main transition-colors"
                >
                    Contact sales
                </a>
                <a href="/docs" class="btn-premium px-6! py-2! text-[14px]!">
                    Try Gabay
                </a>
            </div>
        </div>
    </div>
</nav>
