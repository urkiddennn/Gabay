---
import ThemeToggle from "./ThemeToggle.astro";
---

<nav
    class="sticky top-0 flex items-center justify-between bg-bg-page px-8 lg:px-42 py-4 border-b border-border-main z-50 transition-colors duration-300"
>
    <div class="flex items-center gap-6">
        <!-- Gabay Logo -->
        <a href="/" class="flex items-center gap-2.5">
            <img
                src="/logo.png"
                alt="Gabay - The Personal AI Assistant Logo"
                class="h-7 w-7 object-contain"
            />
            <span class="text-text-main text-xl font-bold tracking-tight">
                Gabay
            </span>
        </a>

        <div
            class="hidden lg:flex items-center gap-8 text-[13px] font-semibold text-text-muted ml-4"
        >
            <a href="#features" class="hover:text-text-main transition-colors"
                >Features</a
            >
            <a href="#comparison" class="hover:text-text-main transition-colors"
                >Comparison</a
            >
            <a href="#faq" class="hover:text-text-main transition-colors">FAQ</a
            >
            <a href="/docs" class="hover:text-text-main transition-colors"
                >Docs</a
            >
        </div>
    </div>

    <div class="flex items-center gap-6">
        <ThemeToggle />
        <div class="hidden sm:flex items-center gap-6">
            <a
                href="#demo"
                class="text-[13px] font-bold text-text-muted hover:text-text-main transition-colors"
            >
                Contact sales
            </a>
            <a
                href="/docs"
                class="bg-text-main text-bg-page px-5 py-2 rounded-md text-[13px] font-bold transition-all hover:opacity-90"
            >
                Get Started
            </a>
        </div>
    </div>
</nav>
